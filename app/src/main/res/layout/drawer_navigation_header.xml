<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:paddingTop="50dp"
    android:paddingBottom="10dp"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:contentDescription="@string/drawer_navigation_header_image_contentDescription_1"
            android:src="@drawable/paytm_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/drawer_navigation_header_text_view_text_1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/drawer_navigation_header_text_view_text_2"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:contentDescription="@string/drawer_navigation_header_image_contentDescription_2"
            android:src="@drawable/qr_code" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/drawer_navigation_header_text_view_text_3"
        android:textColor="@color/black" />
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share QR"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_text">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download QR QR"
        android:padding="8dp"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_text">

    </TextView>



</LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:src="@drawable/banner1">
</ImageView>
</LinearLayout>